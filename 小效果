		<h1>无缝滚动</h1>
		<div id="wufeng">
		<a href="javascript:;">向右走</a>
		<a href="javascript:;">向左走</a>
			<ul>
				<li><img src="img/11.jpg" ></li>
				<li><img src="img/12.jpg" ></li>
				<li><img src="img/13.jpg" ></li>
				<li><img src="img/14.jpg" ></li>
			</ul>
		</div>
	</div>
	<script>
		var oDiw=document.getElementById('wufeng');
		var oUl=oDiw.getElementsByTagName('ul')[0];
		var aLi =oDiw.getElementsByTagName('li');
		var speed=2;
		oUl.innerHTML+=oUl.innerHTML;
		oUl.style.width=aLi.length*aLi[0].offsetWidth+'px';
		oDiw.getElementsByTagName('a')[0].onclick= function(){
			speed=2;
		};
		oDiw.getElementsByTagName('a')[1].onclick= function(){
			speed=-2;
		};
		
		function move(){
			//console(oUl.style.left);
			if(oUl.offsetLeft<-oUl.offsetWidth/2){
				oUl.style.left='0';
			}
			else if (oUl.offsetLeft>0) {
				oUl.style.left=-oUl.offsetWidth/2+'px';
			};
			oUl.style.left=oUl.offsetLeft+speed+'px';
			//console.log('left='+oUl.offsetLeft+'set'+oUl.offsetWidth);
		}

		var times3= setInterval(move,30);

		oUl.onmouseover= function(){
			clearInterval(times3);
		};
		oUl.onmouseout= function(){
			times3= setInterval(move,30);
		};

	</script>

