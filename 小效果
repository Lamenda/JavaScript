	<script>
	var oUl3=document.getElementById('ull2');
	var aLi2= oUl3.getElementsByTagName('li');
	var aA=oUl3.getElementsByTagName('a');
	for(var i= 0;i<aA.length;i++)
	{
		aA[i].onclick=function(){
			oUl3.removeChild(this.parentNode);
		}
	}
	</script>

