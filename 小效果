	<script>
		function toDou(n)
		{
			if(n<10){
				return '0'+n;
			}
			else{
				return ''+n;
			}

		}
		var aBox=document.getElementById('imgbox1');		
		var imgs= aBox.getElementsByTagName('img');
		//alert(imgs.length);
		var oPuase=document.getElementById('btn');
		oPuase.innerHTML='暂停';
		//alert(oPuase.value=='暂停');
		oPuase.onclick=function (){
			if(oPuase.innerHTML=='暂停')
			{
				clearInterval(times);
				oPuase.innerHTML='开始';
			}
			else{
				times=setInterval('tick()',1000);
				tick();
				oPuase.innerHTML='暂停';
			}
			
		};
		function tick()
		{
			var oData= new Date();
			var str='';
			var times= null;
			str=toDou(oData.getFullYear())+toDou(oData.getMonth())+toDou(oData.getDay())+toDou(oData.getHours())+toDou(oData.getMinutes())+toDou(oData.getSeconds());
			//alert(oData.getFullYear());
			for(var i= 0;i<imgs.length;i++)
			{
				imgs[i].src='img/'+str.charAt(i)+'.png';
			}

		}
		times=setInterval('tick()',1000);
		tick();

	</script>


