	<script>
		var times2=null;
		var oDp= document.getElementById('infoPic');
		var oDt= document.getElementById('infoTxt');
		oDp.onmouseover=oDt.onmouseover=function() {
			/* Act on the event */	
			clearTimeout(times2);		
			oDt.style.display='block';			
		};
		oDp.onmouseout=oDt.onmouseout= function() {
			/* Act on the event */
			times2=setTimeout(function (){
				oDt.style.display='none';
			},500);			
		};

	</script>
	
