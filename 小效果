	<h1>DOM操作	</h1>
	<div >
		<h2>插入元素</h2>
		<input type="text" id="txt1" />
		<button id="btnAdd">创建li</button>
		<button id="btnAdd2">在前面创建li</button>
		<ul id="ull"></ul>
	</div>
	<script>
		var oBtn=document.getElementById('btnAdd');
		var oUl2=document.getElementById('ull');
		var aLi= oUl2.getElementsByTagName('li');
		var oTxt=document.getElementById('txt1');
		var oBtn2=document.getElementById('btnAdd2');
		//插入到最后
		oBtn.onclick=function() {
			var oLi = document.createElement('li');
			oLi.innerHTML=oTxt.value;
			oLi.style.background='red';
			oUl2.appendChild(oLi);
		};
		//插入到最前面
		oBtn2.onclick=function() {
			var oLi = document.createElement('li');
			oLi.innerHTML=oTxt.value;
			if(aLi,length>0){
				oUl2.insertBefore(oLi,aLi[0]);
			}
			else{
				//兼容ie
				oUl2.appendChild(oLi);
			}
			
		};

	</script>
